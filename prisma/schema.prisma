  GITHUB_NOT_TRANSFERRED
  DOMAIN_NOT_TRANSFERRED
  CREDENTIALS_NOT_RECEIVED
  CODE_DOESNT_MATCH
  MISSING_ASSETS
  OTHER
}

enum DisputeStatus {
  OPEN
  AWAITING_RESPONSE
  UNDER_REVIEW
  RESOLVED
  ESCALATED
}

enum DisputeResolution {
  FULL_REFUND
  PARTIAL_REFUND
  RELEASE_TO_SELLER
  EXTEND_DEADLINE
