  titleSimilarity       Float   @default(0)
  descriptionSimilarity Float   @default(0)
  screenshotSimilarity  Float   @default(0)
  overallSimilarity     Float   @default(0)

  // Flags
  flagType        SimilarityFlagType @default(INFO)

  // Analysis metadata
  analyzedAt      DateTime  @default(now())

  @@unique([listingId, similarListingId])
  @@index([listingId])
  @@index([similarListingId])
  @@index([overallSimilarity])
  @@index([flagType])
}

enum SimilarityFlagType {
